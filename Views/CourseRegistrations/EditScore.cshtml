@model sms.Models.CourseRegistration

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditScore">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="CourseId" />
            <input type="hidden" asp-for="AcadYearId" />
            <input type="hidden" asp-for="SemesterId" />
            <input type="hidden" asp-for="YearLevelId" />
            <input type="hidden" name="instructorId" value="@ViewBag.InstructorId" />
            <input type="hidden" name="courseId" value="@ViewBag.CourseId" />
            <div class="form-group">
                <label asp-for="Score1" class="control-label"></label>
                <input asp-for="Score1" class="form-control" />
                <span asp-validation-for="Score1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score2" class="control-label"></label>
                <input asp-for="Score2" class="form-control" />
                <span asp-validation-for="Score2" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




            